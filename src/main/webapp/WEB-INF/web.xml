<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
    <display-name>Project1</display-name>

<!--Authentication Servelet-->
    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>dev.dinh.servlets.AuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

<!--Employee Services Servlet-->
    <servlet>
        <servlet-name>EmployeeServlet</servlet-name>
        <servlet-class>dev.dinh.servlets.EmployeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeeServlet</servlet-name>
        <url-pattern>/employees</url-pattern>
    </servlet-mapping>

<!--Reimbursement servlet-->
    <servlet>
        <servlet-name>ReimRequestServlet</servlet-name>
        <servlet-class>dev.dinh.servlets.ReimRequestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReimRequestServlet</servlet-name>
        <url-pattern>/reimbursment</url-pattern>
    </servlet-mapping>

    <!--Manager Reimbursement servlet-->
    <servlet>
        <servlet-name>ReimReqManagerServlet</servlet-name>
        <servlet-class>dev.dinh.servlets.ReimReqManagerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReimReqManagerServlet</servlet-name>
        <url-pattern>/managerReimReq</url-pattern>
    </servlet-mapping>

    <!--Manager Reimbursement servlet-->
    <servlet>
        <servlet-name>ManagerServlet</servlet-name>
        <servlet-class>dev.dinh.servlets.ManagerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManagerServlet</servlet-name>
        <url-pattern>/manager</url-pattern>
    </servlet-mapping>

</web-app>